!!! 1.1
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title Blog

    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0'}
    %meta{name: 'robots', content: 'none'}
    %link{rel:  'stylesheet', href:  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css', type:  'text/css'}
    %link{rel:  'stylesheet', href:  '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', type:  'text/css'}

    %script{type: 'text/javascript', src: "//code.jquery.com/jquery-2.1.3.min.js"}
    %script{type: 'text/javascript', src: "//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"}

    / [if lt IE 9]
      %script{src: "/_/js/html5.js"}    

  %body
    .container
      .navbar.navbar-default
        .container-fluid
          .navbar-header
            %button.navbar-toggle{type: :button, "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href: "/_/"} 
              %i.fa.fa-pencil-square-o
                Blog
     
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li
                %a{href: "/_/post/new"} 
                  %i.fa.fa-plus
                  Add post                                          
              
      =yield
    %br
    %footer
      %p.footer &copy; Chang Sau Sheong 2014
      
:css
  a:link { text-decoration: none; }
  body { padding-top: 20px; font-family: "Helvetica Neue", Helvetica, Arial, Sans Serif; }
  p {font-size: 16px; line-height: 140%; }  
  .thumbnail:hover {background-color: #DCDCDC;}

  .content {
    background-color: #fff;
    padding: 20px 50px 50px 50px;
    -webkit-border-radius: 3px 3px 3px 3px;
       -moz-border-radius: 3px 3px 3px 3px;
            border-radius: 3px 3px 3px 3px;
    -webkit-box-shadow: 0 0px 6px 0px rgba(0,0,0,.3);
       -moz-box-shadow: 0 0px 6px 0px rgba(0,0,0,.3);
            box-shadow: 0 0px 6px 0px rgba(0,0,0,.3);
  }  
  .center { text-align: center}
  .footer { text-align:center; color:#999999; }
